<Window x:Class="HC12_Progsis_Compiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HC12_Progsis_Compiler"
        mc:Ignorable="d"
        Title="HC12" Height="600" Width="700" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Content="Selecciona un archivo:"></Label>
        <TextBox x:Name="name" Text="archivo.c"></TextBox>
        <Button Content="Seleccionar..." Click="Button_Click"></Button>
        <Label Content="Codigo fuente"></Label>
        <TextBlock Text="lorem"></TextBlock>
        <Button Content="Compilar"></Button>
        <Label Content="Errores:"></Label>
        <TextBlock Text="0"></TextBlock>
        <Label Content="Codigo generado:"></Label>
        <TextBlock></TextBlock>
    </StackPanel>
</Window>
